{
    "editor.rulers": [
        120
    ],
    "editor.formatOnSave": true,
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    },
    "black-formatter.args": [
        "--line-length",
        "120"
    ],
    "flake8.args": [
        "--config=setup.cfg"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": false,
    "python.envFile": "${workspaceFolder}/.env"
}
